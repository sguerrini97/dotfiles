[Unit]
Description=oPodSync podman
After=podman-user-wait-network-online.service
Wants=podman-user-wait-network-online.service

[Container]
Image=docker.io/ganeshlab/opodsync:latest
AutoUpdate=registry
PublishPort=8181:8080/tcp
HostName=opodsync-%H
Volume=opodsync-data:/var/www/server/data

[Service]
TimeoutStartSec=900
Restart=always

[Install]
WantedBy=multi-user.target default.target
